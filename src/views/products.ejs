<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda</title>
</head>
<body>
       
    <% if(products.length) { %>

        <h2>Productos Cargados</h2>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td>$<%= product.price %></td>
                        <td><img src="<%= product.thumbnail %>" alt="Imagen del producto" ></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    
    <% } else { %>
        <h2 >No se encontraron productos </h2>
    <% } %>
       <br>
    <button id="buttonForm">Cargar Mas Productos</button> <br>
        <script>
            const buttonForm = document.getElementById('buttonForm');
            buttonForm.addEventListener('click', (event) => {
               window.location = '/';
            })
        </script>
</body>
</html>